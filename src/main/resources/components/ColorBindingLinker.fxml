<?xml version="1.0" encoding="UTF-8"?>

<?import be.howest.photoweave.components.PixelatedImageView?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="anchorpane" id="anchorpane" prefHeight="600.0" prefWidth="800.0"
            stylesheets="@../view/style.css"
            xmlns="http://javafx.com/javafx/8.0.121" fx:controller="be.howest.photoweave.components.ColorBindingLinker">

    <BorderPane AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0">
        <center>
            <PixelatedImageView fx:id="imageview" pickOnBounds="true" fitWidth="550.0"
                                preserveRatio="true">
                <Image url="@../logo.png"/>
            </PixelatedImageView>
        </center>
        <right>
            <VBox alignment="CENTER" prefWidth="250.0" spacing="24">
                <ScrollPane fx:id="scrollpane" fitToHeight="true" fitToWidth="true">
                    <AnchorPane>
                        <ComboBox prefWidth="150.0"/>
                    </AnchorPane>
                </ScrollPane>

                <BorderPane>
                    <left>
                        <JFXButton fx:id="buttonSaveBindigns" alignment="CENTER" contentDisplay="CENTER"
                                   mnemonicParsing="false" onAction="#saveBindingLibrary"
                                   styleClass="button-raised" text="Toepassen" textAlignment="CENTER"/>
                    </left>
                    <right>
                        <JFXButton fx:id="buttonCancel" alignment="CENTER" contentDisplay="CENTER"
                                   mnemonicParsing="false" onAction="#cancel"
                                   text="Annuleren" textAlignment="CENTER"/>
                    </right>
                </BorderPane>
            </VBox>
        </right>
    </BorderPane>
</AnchorPane>
