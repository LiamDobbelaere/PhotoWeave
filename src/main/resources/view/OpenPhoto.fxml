<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="ap" prefHeight="120.0" prefWidth="159.0"
            xmlns="http://javafx.com/javafx/8.0.121" fx:controller="be.howest.photoweave.controllers.OpenPhoto">
   <children>
       <GridPane prefHeight="120.0" prefWidth="438.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="325.0" minWidth="10.0" prefWidth="316.0"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="244.0" minWidth="10.0" prefWidth="122.0"/>
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="62.0" minHeight="10.0" prefHeight="43.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="106.0" minHeight="2.0" prefHeight="41.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="131.0" minHeight="10.0" prefHeight="67.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Load Image" GridPane.columnSpan="2">
               <font>
                  <Font size="18.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <GridPane.margin>
                  <Insets left="30.0" />
               </GridPane.margin>
            </Label>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#openFilePicker" prefWidth="90.0" text="Search File" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="imagepath" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets left="30.0" right="30.0" />
               </GridPane.margin>
            </TextField>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#editPicture" prefWidth="90.0" text="Open Image" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
      </GridPane>
   </children>
</AnchorPane>
